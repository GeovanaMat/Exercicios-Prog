# Ler base e altura de um tri칙ngulo. Calcular e escrever a 치rea.
#include <stdio.h>

int main(){
	
	int base,altura,area;
	
	printf("Qual a base do tri칙ngulo? \n");
	scanf("%d",&base);
	printf("Qual a altura do tri칙ngulo? \n");
	scanf("%d", &altura);
	
	area = (base*altura/2);
	printf("Area do Triangulo: %d",area);
	
	
